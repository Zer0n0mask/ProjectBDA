// Genders by faculty

db.graduate.aggregate([
  {
    $match: {
      "graduateHasPrograms.program.universityName": "Dawat University"
    }
  },
  {
    $unwind: "$graduateHasPrograms",
  },
  {
    $unwind: "$graduateHasPrograms.program",
  },
  {
    $group: {
      _id: {
        faculty:
          "$graduateHasPrograms.program.facultyName",
        gender: "$gender",
      },
      count: {
        $sum: 1,
      },
    },
  },
])


